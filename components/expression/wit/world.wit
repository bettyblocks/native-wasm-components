package betty-blocks:expression;

interface expression {
  type json-string = string;

  record output {
    %result: json-string
  }

  record input {
    expression: string,
    variables: json-string,
    schema-model: option<string>,
    debug-logging: option<bool>,
  }

  // TODO: figure out if this is the interface we want or we have a separate record for the inputs
  expression: func(input: input) -> result<output, string>;
}

world main {
  export expression;
}
